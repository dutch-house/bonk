{
	"name": "@bonk/service",
	"version": "1.0.0",
	"license": "MIT",
	"main": "index.js",
	"exports": {
		"./contracts/*": "./artifacts/contracts/*",
		"./types/*": "./types/*.ts"
	},
	"scripts": {
		"clean": "dotenv -- hardhat clean && rm -rf ./ignition/deployments/",
		"compile": "dotenv -- hardhat compile && dotenv -- hardhat typechain",
		"node": "NODE_ENV=development dotenv -- hardhat node --verbose --hostname 0.0.0.0",
		"test": "dotenv -- REPORT_GAS=true hardhat test --typecheck",
		"deploy:local": "dotenv -- hardhat ignition deploy ignition/modules/AuctionInitiator.ts --network localhost",
		"deploy:sepolia": "dotenv -- hardhat ignition deploy ignition/modules/AuctionInitiator.ts --network sepolia"
	},
	"devDependencies": {
		"@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
		"@nomicfoundation/hardhat-ethers": "^3.0.8",
		"@nomicfoundation/hardhat-ignition": "^0.15.7",
		"@nomicfoundation/hardhat-ignition-viem": "^0.15.7",
		"@nomicfoundation/hardhat-network-helpers": "^1.0.12",
		"@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
		"@nomicfoundation/hardhat-verify": "^2.0.11",
		"@nomicfoundation/hardhat-viem": "^2.0.5",
		"@typechain/ethers-v6": "^0.5.1",
		"@typechain/hardhat": "^9.1.0",
		"@types/chai": "^4.3.20",
		"@types/chai-as-promised": "^7.1.8",
		"@types/mocha": "^10.0.9",
		"@types/node": "^22.8.4",
		"chai": "^4.5.0",
		"ethers": "^6.13.4",
		"hardhat": "^2.22.15",
		"hardhat-gas-reporter": "^1.0.10",
		"solidity-coverage": "^0.8.13",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typechain": "^8.3.2",
		"typescript": "~5.6.3",
		"viem": "^2.21.36"
	}
}

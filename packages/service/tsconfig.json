{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,

		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"~/*": ["./public/*"]
		}
	},
	"include": ["./deploy/*.ts", "./test/*.ts", "./scripts/*.ts", "./types/*.ts"],
	"files": ["./hardhat.config.ts"],
	"exclude": ["node_modules"]
}

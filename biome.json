{
	"$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			".pnpm-store/**",
			"node_modules/**",
			"routes.gen.ts",
			"wagmi.gen.ts",
			"./dist/**",

			"./packages/service/artifacts/**",
			"./packages/service/cache/**",
			"./packages/service/contracts/**",
			"./packages/service/ignition/deployments/**",
			"./packages/service/types/**"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
